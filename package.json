{
  "name": "trustack",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix --cache .",
    "format": "prettier --write --cache .",
    "build:clear": "rm -rf ./**/**/dist/",
    "test:dev": "node --experimental-vm-modules node_modules/jest/bin/jest.js --no-cache --detectOpenHandles",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --no-cache --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chain-web/trustack.git"
  },
  "author": "scc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chain-web/trustack/issues"
  },
  "type": "module",
  "homepage": "https://github.com/chain-web/trustack#readme",
  "dependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^1.23.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-regexp": "^1.15.0",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pnpm": {
    "packageExtensions": {
      "datastore-core": {
        "dependencies": {
          "interface-datastore": "*"
        }
      },
      "@libp2p/peer-store": {
        "dependencies": {
          "@libp2p/peer-id-factory": "*"
        }
      },
      "ipfs-bitswap": {
        "dependencies": {
          "it-drain": "*"
        }
      },
      "@libp2p/mplex": {
        "dependencies": {
          "it-pipe": "*"
        }
      },
      "@deck.gl/mapbox": {
        "dependencies": {
          "@math.gl/web-mercator": "*"
        }
      },
      "@loaders.gl/3d-tiles": {
        "dependencies": {
          "@math.gl/culling": "*",
          "@babel/runtime": "*"
        }
      },
      "@deck.gl/layers": {
        "dependencies": {
          "@luma.gl/core": "*"
        }
      },
      "@deck.gl+geo/layers": {
        "dependencies": {
          "@deck.gl/mesh-layers": "*"
        }
      },
      "@loaders.gl/gltf": {
        "dependencies": {
          "@babel/runtime": "*"
        }
      },
      "@loaders.gl/schema": {
        "dependencies": {
          "@babel/runtime": "*"
        }
      },
      "@loaders.gl/tiles": {
        "dependencies": {
          "@babel/runtime": "*"
        }
      },
      "@loaders.gl/mvt": {
        "dependencies": {
          "@babel/runtime": "*"
        }
      },
      "@deck.gl/mesh-layers": {
        "dependencies": {
          "@luma.gl/webgl": "*",
          "@loaders.gl/schema": "*"
        }
      },
      "@math.gl/polygon": {
        "dependencies": {
          "@babel/runtime": "*"
        }
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "post-checkout": "sh ./auto-git-pull.sh"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types,tests}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.25.0",
  "devDependencies": {
    "@trustack/contract": "workspace:^1.0.0"
  }
}
