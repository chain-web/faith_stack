{
  "name": "trustack",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix --cache .",
    "format": "prettier --write --cache .",
    "build:clear": "rm -rf ./**/**/dist/",
    "test:dev": "node --experimental-vm-modules node_modules/jest/bin/jest.js --no-cache --detectOpenHandles",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --no-cache --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chain-web/trustack.git"
  },
  "author": "scc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chain-web/trustack/issues"
  },
  "homepage": "https://github.com/chain-web/trustack#readme",
  "dependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.14",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-regexp": "^1.15.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pnpm": {
    "packageExtensions": {
      "datastore-core": {
        "dependencies": {
          "interface-datastore": "*"
        }
      },
      "@libp2p/peer-store": {
        "dependencies": {
          "@libp2p/peer-id-factory": "*"
        }
      },
      "ipfs-bitswap": {
        "dependencies": {
          "it-drain": "*"
        }
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "post-checkout": "sh ./auto-git-pull.sh"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types,tests}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.25.0"
}
